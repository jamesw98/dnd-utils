@using Compendium.Models
@using System.Text.RegularExpressions
@using System.Web

<MudItem xs="12" sm="12">
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h3">
            @DndItem.Name
        </MudText>
        <MudDivider/>
        <br/>
        @((MarkupString)Regex.Replace(HttpUtility.HtmlEncode(Regex.Replace(DndItem.PageContent.Trim(), @"[\r\n]{2,}", "\n")), "\r?\n|\r", "<br /><br />"))
    </MudPaper>
</MudItem>

@code {
    [Parameter]
    public DndItem DndItem { get; set; }
}