@using Compendium.Models
@using System.Text.RegularExpressions
@using System.Web

<MudItem xs="12" sm="12">
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h3">
            @Spell.Name
        </MudText>
        <MudDivider/>
        <br/>
        @((MarkupString)Regex.Replace(HttpUtility.HtmlEncode(Spell.PageContent), "\r?\n|\r", "<br /><br />"))
    </MudPaper>
</MudItem>

@code {
    [Parameter]
    public Spell Spell { get; set; }
}