@using dnd_utils.Models
@inject NavigationManager NavigationManager

<MudDialog DisableSidePadding="true">
    <DialogContent>
        <MudContainer Style="max-height: 500px; overflow-y: scroll">
            <SpellContentComponent Spell="Spell"/>    
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="() => { MudDialog.Close(); }">Close</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ViewSpellPage">View Dedicated Spell Page</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }
    
    [Parameter]
    public Spell Spell { get; set; }
    
    [Parameter]
    public int SpellId { get; set; }

    private void ViewSpellPage()
    {
        NavigationManager.NavigateTo($"/spell/{SpellId}");
    }
}